{
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "incremental": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "declaration": false,
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "build",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/auth",
      "@adonisjs/lucid",
      "@adonisjs/i18n",
      "@adonisjs/view",
      "node"
    ],
    "jsx": "react-jsx"
  }
}
